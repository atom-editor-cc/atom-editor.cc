---
layout: "layouts/blog.liquid"
---
<div class="post archive">
  <h2 class="post-name">Blog Archive</h2>

  {% for item in collections.allPostsByYear reversed -%}
    <h3>{{ item[0] }}</h3>

    <ul>
      {% for post in item[1] reversed -%}
        <li>
          <time>{{ post.date | date: "%b %d" }}</time>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </li>
      {% endfor -%}
    </ul>
  {% endfor -%}
</div>
